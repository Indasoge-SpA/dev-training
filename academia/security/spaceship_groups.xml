<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_category_exploration" model="ir.module.category">
        <field name="name">Exploration</field>
        <field name="description">Helps you manage Space Exploration</field>
        <field name="sequence">10</field>
    </record>
    
    <record id="group_spaceship_user" model="res.groups">
        <field name="name">Spaceship / User</field>
        <field name="category_id"
               ref="exploration.module_category_exploration"/>
    </record>
    
     <record id="group_spaceship_admin" model="res.groups">
        <field name="name">Spaceship / Admin</field>
        <field name="category_id"
               ref="exploration.module_category_exploration"/>
        <field name="implied_ids"
               eval="[(4, ref('group_spaceship_user'))]"/>
        <field name="users" eval ="[(4,ref('base.user_admin'))]"/>
    </record>
</odoo>