<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="group_mision_lunar_user" model="res.groups">
        <field name="name">Lunar Mission / User</field>
        <field name="category_id"
               ref="base.module_category_exploration"/>
        <field name="implied_ids"
               eval="[(4,ref('base.group_user'))]"/>
    </record>

    <record id="group_mision_lunar_crew" model="res.groups">
        <field name="name">Lunar Mission / Crew</field>
        <field name="category_id"
               ref="base.module_category_exploration"/>
        <field name="implied_ids"
               eval="[(4,ref('group_mision_lunar_user'))]"/>
    </record>
    
     <record id="group_mision_lunar_admin" model="res.groups">
        <field name="name">Lunar Mission / Admin</field>
        <field name="category_id"
               ref="base.module_category_exploration"/>
        <field name="implied_ids"
               eval="[(4, ref('group_mision_lunar_crew'))]"/>
        <field name="users" eval ="[(4,ref('base.user_admin'))]"/>
    </record>
    
    <record id="only_active_seen_by_users" model="ir.rule">
        <field name="name">Only Active Spaceships can be seen by users</field>
        <field name="model_id" ref="model_spaceship"/>
        <field name="groups"
               eval="[(4,ref('mision_lunar.group_mision_lunar_user'))]"/>
        <field name="domain_force">[('active','=',True)]</field>
    </record>

    <record id="only_active_seen_by_crew" model="ir.rule">
        <field name="name">Only Active Spaceships can be seen by crew</field>
        <field name="model_id" ref="model_spaceship"/>
        <field name="groups"
               eval="[(4,ref('mision_lunar.group_mision_lunar_crew'))]"/>
        <field name="domain_force">[('active','=',True)]</field>
    </record>

        <record id="all_spaceships" model="ir.rule">
        <field name="name">All spaceships can be seen by admins</field>
        <field name="model_id" ref="model_spaceship"/>
        <field name="groups"
               eval="[(4,ref('mision_lunar.group_mision_lunar_admin'))]"/>
        <field name="domain_force">[(1,'=',1)]</field>
    </record>

</odoo>